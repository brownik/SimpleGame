<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="scoreDataBinding"
            type="com.brownik.simplegame.data.viewmodel.ScoreViewModel" />

        <variable
            name="remainTimeDataBinding"
            type="com.brownik.simplegame.data.viewmodel.RemainTimeViewModel" />

        <variable
            name="buttonStateDataBinding"
            type="com.brownik.simplegame.data.viewmodel.ButtonScoreViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main"
        tools:context=".GameActivity">

        <Button
            android:id="@+id/gameButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            android:background="#576F72"
            android:text="Start"
            android:textColor="#E4DCCF"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/gameButton">

            <TextView
                android:id="@+id/totalScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="score"
                android:textColor="#576F72"
                android:textSize="30dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:setScore="@{scoreDataBinding.score}" />

            <TextView
                android:id="@+id/remainTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="remainTime"
                android:textColor="#576F72"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:setRemainTime="@{remainTimeDataBinding.remainTime}" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@id/buttonLayer">

            <TextView
                android:id="@+id/minusAlert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:drawableStart="@drawable/small_minus_score"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text=": 점수 - "
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/plusAlert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:drawableStart="@drawable/small_plus_score"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text=": 점수 + "
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/minusAlert"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <GridLayout
            android:id="@+id/buttonLayer"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_margin="@dimen/white_space"
            android:columnCount="3"
            android:orientation="horizontal"
            android:rowCount="3"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/button0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/white_space"
                android:background="@color/white"
                app:changeImageResource="@{buttonStateDataBinding.buttonScoreData[0]}" />

            <ImageView
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/white_space"
                android:background="@color/white"
                app:changeImageResource="@{buttonStateDataBinding.buttonScoreData[1]}" />

            <ImageView
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/white_space"
                android:background="@color/white"
                app:changeImageResource="@{buttonStateDataBinding.buttonScoreData[2]}" />

            <ImageView
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/white_space"
                android:background="@color/white"
                app:changeImageResource="@{buttonStateDataBinding.buttonScoreData[3]}" />

            <ImageView
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/white_space"
                android:background="@color/white"
                app:changeImageResource="@{buttonStateDataBinding.buttonScoreData[4]}" />

            <ImageView
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/white_space"
                android:background="@color/white"
                app:changeImageResource="@{buttonStateDataBinding.buttonScoreData[5]}" />

            <ImageView
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/white_space"
                android:background="@color/white"
                app:changeImageResource="@{buttonStateDataBinding.buttonScoreData[6]}" />

            <ImageView
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/white_space"
                android:background="@color/white"
                app:changeImageResource="@{buttonStateDataBinding.buttonScoreData[7]}" />

            <ImageView
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/white_space"
                android:background="@color/white"
                app:changeImageResource="@{buttonStateDataBinding.buttonScoreData[8]}" />

        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
