<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="scoreDataBinding"
            type="com.brownik.simplegame.data.viewmodel.ScoreViewModel" />

        <variable
            name="remainTimeDataBinding"
            type="com.brownik.simplegame.data.viewmodel.RemainTimeViewModel" />

        <variable
            name="buttonStateDataBinding"
            type="com.brownik.simplegame.data.viewmodel.ButtonStateViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main"
        tools:context=".GameActivity">

        <Button
            android:id="@+id/gameButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            android:background="#576F72"
            android:text="Start"
            android:textColor="#E4DCCF"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/gameButton">

            <TextView
                android:id="@+id/totalScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#576F72"
                android:textSize="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:setScore="@{scoreDataBinding.score}"/>

            <TextView
                android:id="@+id/remainTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="remainTime"
                android:textColor="#576F72"
                android:textSize="20dp"
                app:setRemainTime="@{remainTimeDataBinding.remainTime}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <GridLayout
            android:id="@+id/buttonLayer"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_margin="@dimen/white_space"
            android:columnCount="3"
            android:orientation="horizontal"
            android:rowCount="3"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/button0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/white_space"
                android:background="@color/white"
                app:changeImageResource="@{buttonStateDataBinding.buttonStateData[0]}"/>

            <ImageView
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/white_space"
                android:background="@color/white"
                app:changeImageResource="@{buttonStateDataBinding.buttonStateData[1]}"/>

            <ImageView
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/white_space"
                android:background="@color/white"
                app:changeImageResource="@{buttonStateDataBinding.buttonStateData[2]}" />

            <ImageView
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/white_space"
                android:background="@color/white"
                app:changeImageResource="@{buttonStateDataBinding.buttonStateData[3]}" />

            <ImageView
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/white_space"
                android:background="@color/white"
                app:changeImageResource="@{buttonStateDataBinding.buttonStateData[4]}" />

            <ImageView
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/white_space"
                android:background="@color/white"
                app:changeImageResource="@{buttonStateDataBinding.buttonStateData[5]}" />

            <ImageView
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/white_space"
                android:background="@color/white"
                app:changeImageResource="@{buttonStateDataBinding.buttonStateData[6]}" />

            <ImageView
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/white_space"
                android:background="@color/white"
                app:changeImageResource="@{buttonStateDataBinding.buttonStateData[7]}" />

            <ImageView
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/white_space"
                android:background="@color/white"
                app:changeImageResource="@{buttonStateDataBinding.buttonStateData[8]}" />

        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
